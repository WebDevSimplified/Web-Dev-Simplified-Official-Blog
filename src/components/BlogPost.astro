---
import dateFormatter from "../utils/dateFormatter.js"
import TagBar from "./TagBar.jsx"
import ShareButtons from "./ShareButtons.jsx"

export interface Props {
  title: string
  date: string
  updatedDate: string
  url: string
  tags: string[]
}

const { title, date, updatedDate, tags, url } = Astro.props
const siteUrl = Astro.site.href
const transitionId = new URL(url).pathname.replaceAll("/", "_").replace(/_$/, "")
---

<div class="layout">
  <article class="content">
    <div>
      <header>
        <h1 class="title" style={{ 'view-transition-name': `blog-title-${transitionId}` }}>{title}</h1>
        <span class={`publish-date ${updatedDate && "old-date"}`} style={{ 'view-transition-name': `blog-publish-date-${transitionId}` }}>
          {dateFormatter.format(new Date(date))}
        </span>
        <br />
        {
          updatedDate && (
            <span class="publish-date" style={{ 'view-transition-name': `blog-update-date-${transitionId}` }}>
              Updated: {dateFormatter.format(new Date(updatedDate))}
            </span>
          )
        }
        <div style="margin-bottom: 1rem">
          <TagBar
            transitionId={transitionId}
            tags={tags.map(tag => {
              return { name: tag }
            })}
          />
        </div>
        <ShareButtons
          client:load
          title={title}
          url={url}
          twitterHandle="DevSimplified"
          siteUrl={siteUrl}
          tags={tags}
        />
      </header>
      <main>
        <slot />
      </main>
      <!-- TODO: Add author and next/previous buttons. Also, maybe add a scroll to top button as well -->
      <!-- TODO: Add custom 404 page -->
      <!-- TODO: Add search/tags to URL to make the back button work better -->
      <!-- TODO: Add Analytics -->
      <!-- TODO: Add social share images (https://joeprevite.com/create-a-twitter-card-for-your-blog) (Maybe dynamically generate a CSS page that is scraped with puppeteer or use something like ImageMagik or ffmpeg) -->
      <!-- TODO: Add Pagination -->
    </div>
  </article>
</div>

<style>
  .content {
    margin-bottom: 8rem;
  }

  .content :global(main > * + :not(h2):not(h3)) {
    margin-top: 1rem;
  }

  .content :global(h2) {
    margin-top: 4rem;
  }

  header {
    margin-bottom: 2rem;
  }

  .title,
  .publish-date {
    margin: 0;
  }

  .publish-date {
    color: var(--theme-text-lighter);
  }

  .publish-date.old-date {
    font-size: 0.9rem;
    text-decoration: line-through;
  }

  .title {
    font-size: 2.25rem;
    font-weight: 700;
  }

  @media (max-width: 50em) {
    .title {
      font-size: 1.75rem;
      overflow-wrap: break-word;
    }
  }
</style>
