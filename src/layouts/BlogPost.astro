---
import "../styles/theme.css"
import "../styles/blog.css"
import "../styles/shiki-highlight.css"
import BaseHead from "../components/BaseHead.astro"
import BlogPost from "../components/BlogPost.astro"
import BaseTopOfBody from "src/components/BaseTopOfBody.astro"
import path from "path"

const { content } = Astro.props
const {
  title,
  description,
  date,
  updatedDate,
  author = "Kyle Cook",
  tags,
} = content
const url = Astro.request.url
---

<html lang={content.lang || "en"}>
  <head>
    <BaseHead {title} {description} permalink={url} image={path.join(url, "og.webp")} />
  </head>

  <body>
    <BaseTopOfBody />
    <div class="wrapper">
      <BlogPost {title} {author} {date} {updatedDate} {tags} {url}>
        <slot />
      </BlogPost>
    </div>
  </body>
</html>
